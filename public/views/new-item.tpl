<li class="task {{done}}" data-status="{{done}}" data-id="{{id}}">
	<div class="container">
		<div class="task-desc">{{task}}</div>
		<div class="ico-up">&#8593;</div>
		<div class="ico-down">&#8595;</div>
		<div class="ico-edit">&raquo;</div>
		<div class="ico-delete">&times;</div>
		<div class="clear"></div>
	</div>
</li>